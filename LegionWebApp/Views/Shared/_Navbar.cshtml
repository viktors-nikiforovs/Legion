			finance = "Hilfe mit Geld";
			about = "Über uns";
			team = "Unser Team";
			contact = "Kontakte";
			deActive = "active";
			enActive = "";
			uaActive = "";
			frActive = "";
			break;
		default:
			vechiles = "Авто";
			needs = "Потреби";
			finance = "Фінансова";
			about = "Про нас";
			team = "Команда";
			contact = "Контакти";
			uaActive = "active";
			enActive = "";
			frActive = "";
			deActive = "";
