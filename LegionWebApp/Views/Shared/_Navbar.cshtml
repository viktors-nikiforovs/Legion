@{
	var temp = this.ViewContext.RouteData.Values["controller"];
	string lang = "UA";
	if (temp != null)
	{
		lang = this.ViewContext.RouteData.Values["controller"].ToString();
	}
	string vechiles;
	string needs;
	string finance;
	string about;
	string team;
	string contact;
	string enActive = "";
	string uaActive = "";
	string frActive = "";
	string deActive = "";
