	{
		case "EN":
			vechiles = "Vechiles";
			needs = "Constant Needs";
			finance = "Finance Aid";
			about = "About Us";
			team = "Our Team";
			contact = "Contact Us";
			enActive = "active";
			uaActive = "";
			frActive = "";
			deActive = "";
			break;
		case "FR":
			vechiles = "Véhicules de l'armée";
			needs = "Besoins permanents";
			finance = "L'aide financière";
			about = "À propos de nous";
			team = "Notre équipe";
			contact = "Contacts";
			frActive = "active";
			enActive = "";
			uaActive = "";
			deActive = "";
