@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer T
@{
	ViewData["Title"] = @T["Finance aid"];
}
<style>
	.btn-3d {
  /* Add box-shadow to give the button depth */
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
  transition: transform 0.3s ease-in-out;
}

.btn-3d:hover {
  /* Add a hover effect to the button by scaling it slightly */
  transform: scale(1.2);
}

</style>
<div id="Finance" class="card">
	<div class="card-body">
		<h5 class="card-title">@T["CHARITABLE ORGANIZATION"] «@T["CHARITY FOUNDATION «LEGION»"]</h5>
		<h6>
  <a href="https://send.monobank.ua/jar/NMfc9M1k9">
    <button type="button" class="btn btn-danger btn-lg shadow-lg btn-3d">
      <img src="~/images/bank.png" width="80px" style="transform: translateZ(0)"/>
      <span class="ms-3" style="transform: translateZ(25px)">@T["Pay with Card / GPay"]</span>
    </button>
  </a>
</h6>


		<address>
			@T["E-mail"]: <a href="mailto:legion.charity@gmail.com">legion.charity@gmail.com</a><br>
			@T["Postal address"]: @T["03142 Kyiv -142, box 28"]
		</address>
		
		<h6><b><p>@T["Attention"]! @T["Be sure to include the name of the organization and the purpose of the payment"]!</p></b></h6>
		<h5>SWIFT @T["transfers"]</h5>
		

		<table class="table table-striped table-hover table-sm">
			<tbody>
				<tr>
					<td>@T["Purpose of payment"]:</td>
					<td><b>@T["Charitable donation"]</b></td>
				</tr>
				<tr>
					<td scope="row">@T["Сompany Name"]:</td>
					<td>@T["CHARITABLE ORGANIZATION"] «@T["CHARITY FOUNDATION"] «@T["LEGION"]» @T["or"] @T["СО «CF"] «@T["LEGION"]»</td>
				</tr>
				<tr>
					<td>@T["ID Code"]:</td>
					<td>44899188</td>
				</tr>
				<tr>
					<td>@T["Name of the bank"]:</td>
					<td>@T["FIRST UKRAINIAN INTERNATIONAL BANK 4, Andriivska Str., Kyiv, 04070, Ukraine"]</td>
				</tr>
				<tr>
					<td>IBAN:</td>
					<td>UA803348510000000026001177709</td>
				</tr>
				<tr>
					<td>SWIFT BIC:</td>
					<td>FUIBUA2X</td>
				</tr>
			</tbody>
		</table>
		<div class="accordion" id="accordionExample">
			<div class="accordion-item">
				<h2 class="accordion-header" id="headingOne">
					<button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="false" aria-controls="collapseOne">
						@T["Correspondent banks"]: EUR
					</button>
				</h2>
				<div id="collapseOne" class="accordion-collapse collapse" aria-labelledby="headingOne" data-bs-parent="#accordionExample">
					<div class="accordion-body">
						<ul>
							<li>Commerzbank AG, Kaiserplatz, 60261, Frankfurt am Main, Germany SWIFT: COBADEFF</li>
							<li>Raiffeisen Bank International AG Am Stadtpark, 9, A-1030,Vienna, Austria SWIFT: RZBAATWW</li>
							<li>Landesbank Baden-Wurttemberg Germany, D-70173, Stuttgart, Am Hauptbahnhof, 2 SWIFT: SOLADEST</li>
						</ul>

					</div>
				</div>
			</div>
			<div class="accordion-item">
				<h2 class="accordion-header" id="headingTwo">
					<button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
						@T["Correspondent banks"]: USD
					</button>
				</h2>
				<div id="collapseTwo" class="accordion-collapse collapse" aria-labelledby="headingTwo" data-bs-parent="#accordionExample">
					<div class="accordion-body">
						<ul>
							<li>JPMorgan Chase Bank N.A.* 270 Park Avenue, NY 10017, New York, United States SWIFT: CHASUS33</li>
							<li>The Bank of New York Mellon 240 Greenwich Street, New York, NY 10286, United States SWIFT: IRVTUS3N</li>
						</ul>
					</div>
				</div>
			</div>
			<div class="accordion-item">
				<h2 class="accordion-header" id="headingThree">
					<button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
						@T["Correspondent banks"]: GBP
					</button>
				</h2>
				<div id="collapseThree" class="accordion-collapse collapse" aria-labelledby="headingThree" data-bs-parent="#accordionExample">
					<div class="accordion-body">
						<ul>
							<li>Raiffeisen Bank International AG Am Stadtpark, 9, A-1030, Vienna, Austria SWIFT: RZBAATWW</li>
						</ul>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
